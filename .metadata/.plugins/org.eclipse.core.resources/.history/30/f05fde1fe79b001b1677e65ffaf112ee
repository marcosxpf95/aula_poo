package Servicos;

import java.io.IOException;
import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.Scanner;import javax.print.attribute.standard.DateTimeAtCompleted;

import Modelos.Cliente;
import Modelos.Conta;

public class Principal {
	public static void main(String[] args) {			
		Cliente cliente;
		Conta conta;
		
		Scanner leitor = new Scanner(System.in);
		
		String opcao; 	
		
		do {			
			DefinirOpcoesMenu();
			opcao = leitor.next();
			
			switch(opcao) {
				case "1":{
					conta = cadastrarConta();
					cliente = CadastrarCliente();
				}							
			}
								
		} while(!opcao.equals("0"));
		
		System.out.println("Programa finalizado com sucesso.");
		leitor.close();
		
	}

	public static void DefinirOpcoesMenu() {
		System.out.println("Selecione a opção que deseja:\n");
		System.out.println("1-Definir Dados Do cliente");	
		System.out.println("0-Sair");	
	}
	
	public static Cliente CadastrarCliente() {		
		Scanner leitor = new Scanner(System.in);
		
		System.out.println("Nome do cliente: ");
		String nome = leitor.next();
		System.out.println("CPF do cliente: ");
		String cpf = leitor.next();
		
		Cliente cliente = new Cliente("", "", "", null, "", 0, null, null);
		
		leitor.close();
		
		return cliente; 
	}
	
	public static Conta CadastrarConta() {
		Scanner leitor = new Scanner(System.in);
		System.out.println("Tipo Conta: ");	
		String tipoConta = leitor.next();
		System.out.println("Saldo: ");
		double saldo = leitor.nextDouble();
		System.out.println("Cheque especial: ");
		double chequeEspecial = leitor.nextDouble();
		
		Date date = new Date(System.currentTimeMillis());
		
		Conta conta = new Conta(date,tipoConta,saldo,chequeEspecial);
		
		leitor.close();
	}
}
